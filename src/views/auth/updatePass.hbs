<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-cente">
                <div class="card-header">
                    <h3>Cambiar Contraseña</h3>
                </div>
                <img src="/img/logo.png" alt="Logo Fazt" class="card-img-top mx-auto m-2 rounded-circle w-50">
                <div class="card-body">
                    <form action="/updatePass/{{user.id_user}}" method="POST">
                        <div class="form-group">
                            <input type="password" name="password_user" 
                            placeholder="Nueva Contraseña" class="form-control">
                        </div>
                        <div class="form-group">
                            <button name="id_user" 
                            value="{{user.id_user}}" class="btn btn-success btn-block">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>